{
  "name": "151500px",
  "version": "1.0.1",
  "description": "a plugin for simple my work",
  "author": "mianxiu",
  "license": "GPL",
  "devDependencies": {
    "@types/node": "^14.14.16",
    "tsc-watch": "^4.2.9",
    "typedoc": "^0.20.23"
  },
  "scripts": {
    "watch": "npm-run-all --parallel watch:*",
    "watch:tsc": "tsc-watch --onSuccess \"node ./plugin\"/",
    "watch:plugin": "chokidar \"./src/**/*.ts\" -c \"npm run removeEmodule\"",
    "watch:css":"chokidar \"./plugin/**/*.html\" \"./src/**/*.css\" -c \"npm run tailwind\"",
    "watch:typedoc": "typedoc \"./src\"",
    "tailwind": "npx tailwindcss-cli build ./src/css/tailwind.css -o ./plugin/css/index.css",
    "removeEmodule": "cd plugin && watch.bat"
  },
  "dependencies": {
    "chokidar-cli": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^2.0.3",
    "tailwindcss-cli": "^0.1.2",
    "typescript": "^4.1.3"
  }
}
